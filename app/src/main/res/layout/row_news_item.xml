<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_white">

            <LinearLayout
                android:id="@+id/llViewUserProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/post_person_profile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:src="@drawable/profile_image" />

                <TextView
                    android:id="@+id/post_person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="David Beckham"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgMoreMenu"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_more_menu" />

            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@id/imgMoreMenu"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/gridbutton_background"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="UnFollow"
                android:textColor="@color/white"
                android:visibility="gone" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_open_post_detail_activity"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:visibility="gone"
            android:id="@+id/get_tv_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginBottom="8dp"
            android:text="dsygfhsdgfvdsvds"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/get_post_image"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:scaleType="fitXY"
             />
        <VideoView
            android:visibility="gone"
            android:id="@+id/get_post_video"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:scaleType="fitXY"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/black"
                    android:src="@drawable/ic_heart_icon"
                    android:tint="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="Like"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/visibesendmessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_heart_icon"
                    android:tint="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="Comment"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/commentsection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/edit_post_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                android:paddingBottom="5dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/post_comment_send"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/gridbutton_background"
                android:text="@string/send"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/get_post_likes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.5"
                android:text="4.261 likes"
                android:textColor="@color/colorAccent"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/get_post_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.2"
                android:text="5000 comments"
                android:textColor="@color/colorAccent"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/get_post_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.3"
                android:text="2 HOURS AGO"
                android:textAlignment="viewEnd"
                android:textStyle="normal"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/post_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is demo text."
                android:textColor="@color/gray_a"
                android:textSize="14dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/post_total_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="View all 124 comments"
                android:textStyle="normal" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/post_rclv_rclv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/gray_e" />

</LinearLayout>